<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>ATN Toy Store</title>
</head>
<body>


<header>
<h1>ATN Product </h1>
</header>
<section class="inputForm">

<form action="/search" method="POST" class="search">
         Search <input type="text" name = "txtSearch">
         <input type="submit" value="search">
 </form>

<form action="/add" method="POST" class="add" >   

      Name <input type="text" name = "txtName">
      {{errorMsg}}
      {{errorFw}}
      <br>     
      Price <input type="text" name="txtPrice">
      <br>
      Quantity <input type="txt" name="txtQuantity"> {{errorMs}}
      <input type="submit" value="Add Product">     
      </form> 
       <br>
<table border="3" class="table">
  <tr>
    
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Delete</th>
  </tr>
{{#each data}}
  <tr>  
    <td>{{_id}} </td>
    <td>{{Name}} </td>
    <td>{{Price}} </td>
    <td>{{Quantity}}</td>
    <td><a href="/delete?id={{_id}}">Delete</a></td>  
  </tr>
{{/each}}
</table>
</section>
